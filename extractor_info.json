{
  "@context": "http://clowder.ncsa.illinois.edu/contexts/extractors.jsonld",
  "name": "ncsa.image.ocr",
  "version": "1.1.1",
  "description": "Simple OCR (Optical Character Recognition) extractor to extract text from an image",
  "author": "Liana Diesendruck <ldiesend@illinois.edu>",
  "contributors": [
    "Bing Zhang <bing@illinois.edu>",
    "Rob Kooper <kooper@illinois.edu>",
    "Rui Liu <ruiliu@illinois.edu>",
    "Michael Johnson <mjohns44@illinois.edu>"
  ],
  "contexts": [
    {
      "ocr_text": "http://clowder.ncsa.illinois.edu/metadata/ncsa.image.ocr#ocr_text"
    }
  ],
  "repository": [
    {
      "repType": "git",
      "repUrl": "https://opensource.ncsa.illinois.edu/bitbucket/projects/CATS/repos/extractors-cv/browse/extractors-tesseract"
    },
    {
      "repType": "docker",
      "repUrl": "clowder/extractors-tesseract"
    }
  ],
  "process": {
    "file": [
      "image/*"
    ]
  },
  "external_services": [],
  "dependencies": [
    "tesseract"
  ],
  "bibtex": [],
  "labels": [
    "Type/Image"
  ],
  "parameters": {
    "schema": {
      "no-columns": {
        "type": "string",
        "title": "PSM config to enable multiple columns extractions",
        "enum": [
          "3",
          "6"
        ],
        "default": "6"
      },
      "min-line-length": {
        "type": "integer",
        "title": "Minimum required length of line",
        "default": 10
      }
    },
    "form": [
      {
        "key": "no-columns",
        "type": "select",
        "notitle": true,
        "titleMap": {
          "3": "Multi-columns",
          "6": "Single column "
        }
      },
      {
        "key": "min-line-length",
        "inlinetitle": "Minimum required length of line",
        "notitle": true
      }
    ]
  }
}
